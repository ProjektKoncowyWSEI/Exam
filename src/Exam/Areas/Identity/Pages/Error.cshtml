@page
@model ErrorModel
@inject  IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = @Localizer["Error"];
}

<h1 class="text-danger">@Localizer["Error."]</h1>
<h2 class="text-danger">@Localizer["An error occurred while processing your request."]</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>@Localizer["Development Mode"]</h3>
<p>
    @Localizer["Swapping to Development environment will display more detailed information about the error that occurred."]
</p>
<p>
    <strong>@Localizer["Development environment should not be enabled in deployed applications"]</strong>, @Localizer["as it can result in sensitive information from exceptions being displayed to end users. For local debugging, development environment can be enabled by setting the"] <strong>ASPNETCORE_ENVIRONMENT</strong> @Localizer["environment variable to"] <strong>@Localizer["Development"]</strong>, @Localizer["and restarting the application."]
</p>
