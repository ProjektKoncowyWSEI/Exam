@model IEnumerable<ExamContract.TutorialModels.Tutorial>
@if (Model != null && Model.Count() > 0)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Localizer["Owner"]
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>Link</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="tutorialsGrid">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="td">@Html.DisplayNameFor(model => model.Name)</div>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="td"> @Html.Raw(item.Description)</div>
                        @Html.Raw(item.Description)
                    </td>               
                    <td>
                        <div class="td">@Localizer["Owner"]</div>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        <div class="td">@Html.DisplayNameFor(model => model.Active)</div>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        <a asp-controller="UserTutorials" asp-action="Tutorial" asp-route-id="@item.Id">Link</a>
                    </td>
                    <td>
                        <form asp-action="DeleteTutorial" method="post">
                            <input type="hidden" name="courseId" value="@item.ParentId" />
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger btn-sm" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
