@model Logger.Model.EventLog

@{
    ViewData["Title"] = @Localizer["Delete"];
}

<h5>@Localizer["Are you sure you want to delete this?"]</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Message"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @Localizer["EventId"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventId)
        </dd>
        <dt class="col-sm-2">
            @Localizer["LogLevel"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LogLevel)
        </dd>
        <dt class="col-sm-2">
            @Localizer["CreatedTime"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedTime)
        </dd>
    </dl>
</div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value=@Localizer["Delete"] class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">@Localizer["Back to List"]</a>
    </form>
</div>
