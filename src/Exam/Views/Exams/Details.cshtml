@model ExamContract.MainDbModels.Exam

@{
    ViewData["Title"] = Localizer["Details"];
}

<h3>@Localizer["Details"]: @Html.DisplayFor(model => model.Name)</h3>

<div>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationMinutes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxPoints)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><i id="arrow" onclick="toggleTr('#questions', '#arrow')" class="fa fa-chevron-down"></i></td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.MinStart)
                </td>
                <td>
                    @Html.DisplayFor(model => model.MaxStart)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DurationMinutes)
                </td>
                <td>
                    @Html.DisplayFor(model => model.MaxPoints)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Login)
                </td>
                <td class="command">
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@Model.Id">@Localizer["Edit"]</a>
                    <a asp-action="Index" class="btn btn-primary btn-sm">@Localizer["Back to List"]</a>
                    <a asp-controller="Questions" asp-action="Index" asp-route-parentId="@Model.Id" class="btn btn-primary btn-sm">@Localizer["Questions"]</a>
                </td>
            </tr>
            <tr id="questions" style="display:none">
                <td></td>
                <td colspan="7">hghgh</td>
            </tr>
        </tbody>
    </table>

</div>

