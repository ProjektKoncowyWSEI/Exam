@model ExamContract.MainDbModels.Question

@{
    ViewData["Title"] = Localizer["Edit"];
}
<partial name="_NicEdit" />
<h1>@Localizer["Edit"]</h1>    
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            @*<input asp-for="Content" type="hidden" />*@
            <input asp-for="ExamId" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea rows="4" asp-for="Content"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerTypesEnum" class="control-label"></label>
                <select asp-for="AnswerTypesEnum" asp-items="Html.GetEnumSelectList<AnswerTypesEnum>()" class="form-control"></select>
                <span asp-validation-for="AnswerTypesEnum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control col-2" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Exams" asp-action="Index" asp-route-parentId="@Model.ExamId" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">@Localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
