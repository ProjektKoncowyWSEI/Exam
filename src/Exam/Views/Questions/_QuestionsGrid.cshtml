@model IEnumerable<ExamContract.MainDbModels.Question>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">@Localizer["Create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                <div class="command">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a>
                    <a class="btn btn-primary btn-sm" asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>