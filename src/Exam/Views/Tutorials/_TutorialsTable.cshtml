@model IEnumerable<ExamContract.TutorialModels.Tutorial>


@if (Model != null && Model.Count() > 0)
{
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                <div class="td">@Html.DisplayNameFor(model => model.Name)</div>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div class="td">@Html.DisplayNameFor(model => model.Image)</div>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <div class="td">@Html.DisplayNameFor(model => model.Description)</div>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <div class="td">@Html.DisplayNameFor(model => model.CategoryId)</div>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
}
